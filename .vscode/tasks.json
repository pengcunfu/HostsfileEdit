{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "运行程序",
            "type": "shell",
            "command": "python",
            "args": [
                "main.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "直接运行Python主程序",
            "icon": {
                "id": "play",
                "color": "terminal.ansiGreen"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Nuitka编译",
            "type": "shell",
            "command": "python",
            "args": [
                "scripts/build.py"
            ],
            "problemMatcher": [],
            "group": "build",
            "detail": "使用Nuitka编译项目（性能更好）",
            "icon": {
                "id": "build",
                "color": "terminal.ansiYellow"
            }
        },
        {
            "label": "本地安装",
            "type": "shell",
            "command": "python",
            "args": [
                "scripts/install.py"
            ],
            "problemMatcher": [],
            "group": "build",
            "detail": "在本地系统安装Hosts文件编辑工具",
            "icon": {
                "id": "desktop-download",
                "color": "terminal.ansiGreen"
            }
        },
        {
            "label": "版本发布",
            "type": "shell",
            "command": "python",
            "args": [
                "scripts/release.py"
            ],
            "problemMatcher": [],
            "detail": "执行版本发布流程（创建Git标签和触发CI）",
            "icon": {
                "id": "rocket",
                "color": "terminal.ansiGreen"
            }
        },
        {
            "label": "版本发布 (指定版本)",
            "type": "shell",
            "command": "python",
            "args": [
                "scripts/release.py",
                "${input:version}"
            ],
            "problemMatcher": [],
            "detail": "发布指定版本号",
            "icon": {
                "id": "tag-add",
                "color": "terminal.ansiGreen"
            }
        },
        {
            "label": "查看发布版本",
            "type": "shell",
            "command": "python",
            "args": [
                "scripts/release.py",
                "--list"
            ],
            "problemMatcher": [],
            "detail": "列出所有已发布的版本",
            "icon": {
                "id": "tag",
                "color": "terminal.ansiBlue"
            }
        },
        {
            "label": "清理构建文件",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "build",
                "dist",
                "__pycache__",
                "*.spec"
            ],
            "windows": {
                "command": "powershell",
                "args": [
                    "-Command",
                    "Remove-Item -Recurse -Force build, dist, __pycache__ -ErrorAction SilentlyContinue; Remove-Item *.spec -ErrorAction SilentlyContinue"
                ]
            },
            "problemMatcher": [],
            "detail": "清理所有构建生成的临时文件",
            "icon": {
                "id": "trash",
                "color": "terminal.ansiRed"
            }
        }
    ],
    "inputs": [
        {
            "id": "version",
            "description": "请输入版本号",
            "default": "1.0.0",
            "type": "promptString"
        },
        {
            "id": "commitMessage",
            "description": "请输入提交信息",
            "default": "更新代码",
            "type": "promptString"
        }
    ]
}